<!-- Modal Form -->
<%= simple_form_for @implementer_unit, :html => { :class => 'form-horizontal' } do |f| %>
  <div id="upk_form" class="modal container hide fade" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Edit Data <%= @implementer_unit.name %></h3>
  </div>
  <div class="modal-body">
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :facilitator %>
    <%= f.input :facilitator_phone %>
    <%= f.input :call_center %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Kirim", {:class => "btn btn-primary"} %>
  </div>
</div>
<% end %>
<!-- End of Modal Form -->