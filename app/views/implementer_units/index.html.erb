<%- model_class = ImplementerUnit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:facilitator) %></th>
      <th><%= model_class.human_attribute_name(:facilitator_phone) %></th>
      <th><%= model_class.human_attribute_name(:call_center) %></th>
      <th><%= model_class.human_attribute_name(:subdistrict_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @implementer_units.each do |implementer_unit| %>
      <tr>
        <td><%= link_to implementer_unit.id, implementer_unit_path(implementer_unit) %></td>
        <td><%= implementer_unit.name %></td>
        <td><%= implementer_unit.address %></td>
        <td><%= implementer_unit.phone %></td>
        <td><%= implementer_unit.facilitator %></td>
        <td><%= implementer_unit.facilitator_phone %></td>
        <td><%= implementer_unit.call_center %></td>
        <td><%= implementer_unit.get_subdistrict_name %></td>
        <td><%=l implementer_unit.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_implementer_unit_path(implementer_unit), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      implementer_unit_path(implementer_unit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_implementer_unit_path,
            :class => 'btn btn-primary' %>
