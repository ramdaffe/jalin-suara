<div class="span12">
  <!-- Content -->
  <div class="blog">
    <div class="row">
      <div class="span12">

        <div class="row">
          <!-- Main Content -->
          <div class="span8">
            <!-- Navigation Tabs -->
            <ul class="nav nav-tabs">
              <li class="<%= 'active' if params[:tab] == nil %>" style="background-image: none; margin-bottom: -5px; margin-left: -20px;">
                <% if params[:tab] == nil %>
                  <%= link_to "Cerita", subdistrict_path(@subdistrict), :style => "background-color: #fcfcfc;" %>
                <% else %>
                  <%= link_to "Cerita", subdistrict_path(@subdistrict) %>
                <% end %>
              </li>
              <li class="<%= 'active' if params[:tab] == 'activities' %>" style="background-image: none; margin-bottom: -5px; margin-left: -20px;">
                <% if params[:tab] == 'activities' %>
                  <%= link_to "Sub Proyek", {:controller => 'subdistricts', :action => 'show', :tab => "activities"}, {:style => "background-color: #fcfcfc;"} %>
                <% else %>
                  <%= link_to "Sub Proyek", :controller => 'subdistricts', :action => 'show', :tab => "activities" %>
                <% end %>
              </li>
            </ul>
            <!-- End of Navigation Tabs -->
            <br />
            <% if params[:tab] == nil %>
              <!-- Add Post Form -->
              <% if current_user != nil %>
                <div class="pull-right">
                  <button href="#responsive" data-toggle="modal" class="btn">+ Tambah Cerita</button>
                </div>
              <% end %>
              <!-- End of Add Post Form -->

              <%= render "stories_tab" %>
            <% else %>
              <%= render "activities_tab" %>
            <% end %>
          </div>
          <!-- End of Main Content -->
          <!-- Widgets -->
          <div class="span4">
            <div class="sidebar", style="margin-top: 0px;">
              <div class="widget">
                <h4><%= @subdistrict.name %></h4>
                <% if @implementer_unit %>
                  <h5 class="nav-list" style="text-align: center; border-bottom: 1px solid #eee;"><%= image_tag @implementer_unit.picture.url(:square) %></h5>
                <% end %>
                
                <h5 style="margin-top: 10px;">Cakupan PNPM</h5>
                <ul>
                  <li>Jumlah Aktivitas: <b><%= @subdistrict.get_activities_number %></b></li>
                  <li>Total Penerima Manfaat (L): <b><%= @subdistrict.get_total_male_beneficiary %></b></li>
                  <li>Total Penerima Manfaat (P): <b><%= @subdistrict.get_total_female_beneficiary %></b></li>
                  <li>Total Penerima Manfaat (Miskin): <b><%= @subdistrict.get_total_poor_beneficiary %></b></li>
                  <li>Total Dana BLM:</li>
                  <li style="background-image: none;"><b><%= number_to_currency(@subdistrict.get_total_blm_amount, :unit => "Rp ") %></b></li>
                  <li>Total Dana Swadaya Masyarakat:</li>
                  <li style="background-image: none;"><b><%= number_to_currency(@subdistrict.get_total_self_fund_amount, :unit => "Rp ") %></b></li>
                </ul>
                
                <div style="margin-top: -15px; border-bottom: 1px solid #eee;">&nbsp;</div>
                
                <h5 style="margin-top: 10px;">Informasi UPK</h5>
                <ul>
                  <li>Alamat UPK: <b><%= @implementer_unit.address %></b></li>
                  <li>Telepon UPK: <b><%= @implementer_unit.phone %></b></li>
                  <li>Nama Fasilitator: <b><%= @implementer_unit.facilitator %></b></li>
                  <li>Telepon Fasilitator: <b><%= @implementer_unit.facilitator_phone %></b></li>
                  <li>Telepon Pengaduan: <b><%= @implementer_unit.call_center %></b></li>
                  <li>Jumlah Desa: </li>
                  <li>Jumlah Kelurahan: </li>
                </ul>
              </div>
            </div>
          </div>
          <!-- End of Widgets -->
        </div>
      </div>
    </div>
  </div>
  <!-- End of Content -->
</div>