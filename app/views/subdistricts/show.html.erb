<div class="span3">
  <div class="well" style="padding: 8px 0;">
    <h5 class="nav-list"><%= @subdistrict.name %></h5>
    <% if @implementer_unit %>
      <h5 class="nav-list" style="text-align: center;"><%= image_tag @implementer_unit.picture.url(:square)%></h5>
    <% end %>
    <ul class="nav nav-list">
      <li class="divider"></li>
      <li class="nav-header">Profil Kecamatan</li>
      <li style="font-size: 12px;">Nama UPK: </li>
      <li style="font-size: 12px;">Alamat UPK: </li>
      <li style="font-size: 12px;">Telepon UPK: </li>
      <li style="font-size: 12px;">Nama Fasilitator: </li>
      <li style="font-size: 12px;">Telepon Fasilitator: </li>
      <li style="font-size: 12px;">Telepon Pengaduan: </li>
      <li style="font-size: 12px;">Jumlah Desa: </li>
      <li style="font-size: 12px;">Jumlah Kelurahan: </li>
      <li style="font-size: 12px;">Jumlah Penerima Manfaat: </li>
    </ul>
  </div>
</div>

<!-- Main Content -->
<div class="span6">
  <div class="main-content">
    <div class="well">
    <% if params[:tab] == nil %>
      <!-- Cerita Tab-->
      <ul class="nav nav-tabs">
        <li class="active"><%= link_to "Cerita", subdistrict_path(@subdistrict) %></li>
        <li><%= link_to "Sub Proyek", :controller => 'subdistricts', :action => 'show', :tab => "activities" %></li>
      </ul>

      <!-- Tab -->
      <div class="tabbable">
        <div class="tab-content">
          <div class="tab-pane active">
            <% i = 0 %>
            <% @posts.each do |post| %>
              <% i += 1%>
              <% if i != 1 %>
                <hr />
              <% end %>
              <div class="row">
                <div class="left-side">
                  <% if post.picture_file_name != nil %>
                    <%= image_tag post.picture.url(:medium), :style => "float:left; margin-bottom: 10px;" %>
                  <% end %>
                </div>
                <div class="right-side">
                  <div class="content-heading">
                    <h5><%= link_to post.title, post %></h5>
                    oleh <%= post.user.username %>&nbsp;<small><%= distance_of_time_in_words(post.created_at, Time.now) %> ago</small><br/>
                  </div>
                  <div class="content-desc">
                    <%= raw(truncate(post.description, length: 200)) %> <%= link_to 'baca selengkapnya', post %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- End of Tab -->
      <!-- End of Cerita Tab-->
    <% else %>
      <!-- Sub Proyek Tab-->
      <ul class="nav nav-tabs">
        <li><%= link_to "Cerita", subdistrict_path(@subdistrict) %></li>
        <li class="active"><%= link_to "Sub Proyek", :controller => 'subdistricts', :action => 'show', :tab => "activities" %></li>
      </ul>

      <!-- Tab -->
      <div class="tabbable">
        <div class="tab-content">
          <div class="tab-pane active">
            <% @activities.each do |activity| %>
              <div class="content-heading"><h5><%= link_to activity.name, activity_path(activity) %></h5></div>
              <%= image_tag activity.picture.url(:thumb), :style => "float:left; margin-right: 10px; margin-bottom: 10px;" %>
              Jumlah Penerima Manfaat: <%= activity.male_beneficiary + activity.female_beneficiary %><br/>
              Jumlah Dana Bantuan Langsung Masyarakat: <%= number_to_currency(activity.blm_amount, :unit => "Rp ") %><br/>
              Jumlah Dana Swadaya Masyarakat: <%= number_to_currency(activity.self_fund_amount, :unit => "Rp ") %><br>
              <div style="clear:both"></div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- End of Tab -->
      <% end %>
    </div>
  </div>
</div>
<!-- End of Main Content -->