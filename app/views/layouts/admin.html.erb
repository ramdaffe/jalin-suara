<!DOCTYPE html>
<html>
<head>
  <title>Jalin Suara</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield :scripts %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Navigation Bar -->
  <div class="container">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">Jalin Suara [Beta]</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to "Tentang Jalin Suara", "/home/about" %></li>
            </ul>
            <ul class="nav pull-right">
              <% if user_signed_in? %>
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <%= current_user.email %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Edit Profil', edit_user_registration_path %></li>
                    <li><a href="#responsive" data-toggle="modal">Tambah Cerita</a></li>
                    <li class="divider"></li>
                    <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
                  </ul>
              <% else %>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
                <li><%= link_to "Login", new_user_session_path %></li>
                <li><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %></li>
                <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
              <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Navigation Bar -->

  <!-- Content -->
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="row">
          <!-- Add Post Form -->
          <% if current_user != nil %>
            <%= render "/posts/form" %>
          <% end %>
          <!-- End of Add Post Form -->

          <div class="span3">
            <div class="well" style="padding: 8px 0;">
              <ul class="nav nav-list">
                <li class="nav-header">Menu</li>
                <li <%= "class=active" if params[:controller] == "admin/home" %>><%= link_to "Beranda Administrator", '/admin' %></li>
                <li <%= "class=active" if params[:controller] == "admin/provinces" %>><%= link_to "Kelola Propinsi", admin_provinces_path %></li>
                <li <%= "class=active" if params[:controller] == "admin/districts" %>><%= link_to "Kelola Kabupaten", admin_districts_path %></li>
                <li <%= "class=active" if params[:controller] == "admin/subdistricts" %>><%= link_to "Kelola Kecamatan", admin_subdistricts_path %></li>
                <li <%= "class=active" if params[:controller] == "admin/activities" %>><%= link_to "Kelola Sub Proyek", admin_activities_path %></li>
                <li <%= "class=active" if params[:controller] == "admin/posts" %>><%= link_to "Kelola Cerita", admin_posts_path %></li>
                <li <%= "class=active" if params[:controller] == "admin/comments" %>><%= link_to "Kelola Komentar", admin_comments_path %></li>
                <li <%= "class=active" if params[:controller] == "admin/users" %>><%= link_to "Kelola Pengguna", admin_users_path %></li>
              </ul>
            </div>
          </div>
          
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Content-->
</body>
</html>