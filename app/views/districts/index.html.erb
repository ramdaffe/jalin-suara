<div class="span3">
  <div class="well" style="padding: 8px 0;">
    <ul class="nav nav-list">
      <li class="nav-header">Cakupan Jalin Suara</li>
    </ul>
    <div style="font-size: 12px; margin-left: 15px;">Propinsi: <%= link_to @province_stats.size, provinces_path, :style => 'display: inline;' %></div>
    <div style="font-size: 12px; margin-left: 15px;">Kabupaten: <%= link_to @district_stats.size, districts_path, :style => 'display: inline;' %></div>
    <div style="font-size: 12px; margin-left: 15px;">Kecamatan: <%= link_to @subdistrict_stats.size, subdistricts_path, :style => 'display: inline;' %></div>
    <div style="font-size: 12px; margin-left: 15px;">Sub Proyek: <%= link_to(@activities_stats.size, activities_path) %></div>
    <ul class="nav nav-list">
      <li class="divider"></li>
      <li class="nav-header">Cakupan PNPM Mandiri</li>
      <li style="font-size: 12px;">Propinsi: </li>
      <li style="font-size: 12px;">Kabupaten: </li>
      <li style="font-size: 12px;">Kecamatan: </li>
      <li style="font-size: 12px;">Desa: </li>
      <li style="font-size: 12px;">Total Bantuan Langsung Masyarakat:</li>
      <li style="font-size: 12px;"><b><%= number_to_currency(0, :unit => "Rp ") %></b></li>
    </ul>
  </div>
</div>

<!-- Main Content -->
<div class="span9">
  <div class="main-content">
    <div class="well">
      <h4>Daftar Kabupaten</h4>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Kabupaten</th>
            <th>Propinsi</th>
            <th>Jumlah Kecamatan</th>
            <th>Jumlah Sub Proyek</th>
          </tr>
        </thead>
        <tbody>
          <% i=0 %>
          <% @districts.each do |district| %>
            <% i+= 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= link_to district.name, district_path(district) %></td>
              <td><%= district.get_province_name %></td>
              <td style='text-align: right;'><%= district.get_subdistricts_number %></td>
              <td style='text-align: right;'><%= district.get_activities_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= will_paginate @districts, :renderer => BootstrapPagination::Rails %>
    </div>
  </div>
</div>
<!-- End of Main Content -->