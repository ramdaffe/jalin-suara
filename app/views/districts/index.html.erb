<div class="span12">
  <!-- Content -->
  <div class="row">
    <!-- Main Content -->
    <div class="span8">
      <div class="support-page">
        <h2>Daftar Kabupaten</h2>
        <div class="blog">
          <div class="meta">
            <% if @province != nil %>
              <i class="icon-map-marker"></i> Propinsi <%= @province.name %>
            <% else %>
              <i class="icon-map-marker"></i> Indonesia
            <% end %>
          </div>
        </div>
        <%= form_tag districts_path, :method => 'get', :id => "table_search" do %>
          <%= hidden_field_tag :province_id, params[:province_id] if @province != nil %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Cari", :name => nil, :class => "btn btn-primary", :style => "margin-bottom: 10px;" %>
          <div id="districts"><%= render 'districts' %></div>
        <% end %>
      </div>
    </div>
    <!-- End of Main Content -->
    <!-- Widgets -->
    <div class="span4">
      <div class="sidebar", style="margin-top: 0px;">
        <div class="widget">
          <h4>Cakupan Jalin Suara</h4>
          <ul>
            <li>Propinsi: <%= link_to @provinces_number, provinces_path %></li>
            <li>Kabupaten: <%= link_to @districts_number, districts_path %></li>
            <li>Kecamatan: <%= link_to @subdistricts_number, subdistricts_path %></li>
            <li>Sub Proyek: <%= link_to @activities_number, activities_path %></li>
          </ul>
        </div>
        <div class="widget">
          <h4>Cakupan PNPM Mandiri</h4>
          <ul>
            <li>Propinsi: 33</li>
            <li>Kecamatan: 6.752</li>
            <li>Total Dana BLM: 9,7 Triliun Rupiah</li>
            <li>Total Dana APBN: 8,9 Triliun Rupiah</li>
            <li>Total Dana APBD: 8 Miliar Rupiah</li>
          </ul>
        </div>
      </div>
    </div>
    <!-- End of Widgets -->
  </div>
  <!-- End of Content -->
</div>