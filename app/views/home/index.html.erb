    <div style="font-size: 12px; margin-left: 15px;">Kabupaten: <%= link_to(@districts_number, districts_path) %></div>
    <div style="font-size: 12px; margin-left: 15px;">Kecamatan: <%= link_to(@subdistricts_number, subdistricts_path) %></div>
    <div style="font-size: 12px; margin-left: 15px;">Sub Proyek: <%= link_to(@activities_number, activities_path) %></div>
    <ul class="nav nav-list">
      <li class="divider"></li>
