<div class="span12">
  <!-- GMaps -->
  <div id="da-slider" class="da-slider">
    <%= gmaps4rails(@json) %>
  </div>
  <!-- GMaps -->

  <div class="bor"></div>
  
  <div class="blog">
    <div class="row">
      <div class="span12">

        <div class="row">
          <!-- Posts -->
          <div class="span8">
            <div class="rposts">
              <h2>Cerita Terpopuler</h2>
            </div>
            <div class="posts">
              <!-- Post Entry -->
              <% @popular_posts.each do |post| %>
                <div class="entry">
                   <h3><%= link_to post.title, post %></h3>
                   
                   <!-- Meta details -->
                   <div class="meta">
                    <i class="icon-calendar"></i> <%= post.created_at.strftime("%d-%m-%Y") %>&nbsp;
                    <i class="icon-map-marker"></i> <%= post.get_subdistrict_name %>&nbsp;
                    <i class="icon-user"></i> <%= post.user.username %> 
                    <span class="pull-right"><i class="icon-comment"></i> <%= post.comments_count %> Komentar</span>
                   </div>
                   
                   <!-- Thumbnail -->
                   <div class="bthumb2">
                    <%= image_tag post.picture.url(:thumbnail) %>
                   </div>
                   
                   <div style="min-height: 100px">
                    <%= raw(truncate(post.description, length: 250)) %>
                   </div>
                   <div class="button"><%= link_to "Baca selengkapnya...", post_path(post) %></div>
                </div>
              <% end %>
              <!-- End of Post Entry -->
            </div>
          </div>
          <!-- End of Posts -->
          <!-- Widgets -->
          <div class="span4">
            <div class="sidebar" style="margin-top: 0px;">
              <div class="widget">
                <h4>Pencarian</h4>
                <%= form_tag '/home/search', :class => 'form-search' do %>
                  <%= text_field_tag 'query', nil, :class => 'input-medium' %>
                  <%= submit_tag 'Cari', :class => 'btn' %>
                <% end %>
              </div>
              <div class="widget">
                <h4>Cakupan PNPM Mandiri</h4>
                <ul>
                  <li>Propinsi: 33</li>
                  <li>Kecamatan: 6.752</li>
                  <li>Total Dana BLM: 9,7 Triliun Rupiah</li>
                  <li>Total Dana APBN: 8,9 Triliun Rupiah</li>
                  <li>Total Dana APBD: 8 Miliar Rupiah</li>
                </ul>
              </div>
              <div class="widget">
                <h4>Cerita Terbaru</h4>
                <ul>
                  <% @recent_posts.each do |post| %>
                    <li><%= link_to post.title, post %></li>
                  <% end %>
                 </ul>
              </div>
            </div>
          </div>
          <!-- End of Widgets -->
        </div>

      </div>
    </div>
  </div>
</div>