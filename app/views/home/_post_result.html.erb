<h3><%= link_to result.title, result %></h3>

<!-- Meta details -->
<div class="meta">
  <i class="icon-calendar"></i> <%= result.created_at.strftime("%d-%m-%Y") %>&nbsp;
  <i class="icon-map-marker"></i> <%= result.get_subdistrict_name %>&nbsp;
  <i class="icon-user"></i> <%= result.user.username %>
  <span class="pull-right"><i class="icon-comment"></i> <%= result.comments_count %> Komentar</span>
</div>

<!-- Thumbnail -->
<div class="bthumb2">
  <%= image_tag result.picture.url(:thumbnail) %>
</div>

<div style="min-height: 100px">
  <%= raw(truncate(result.description, length: 250)) %>
</div>

<div class="button"><%= link_to "Baca selengkapnya...", post_path(result) %></div>