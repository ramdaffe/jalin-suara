<div class="span12">
  <!-- Content -->
  <div class="blog">
    <div class="row">
      <div class="span12">

        <div class="row">
          <!-- Main Content -->
          <div class="span8">
            <div class="posts">
              <!-- Post Entry -->
              <div class="entry">
                <h2><%= @post.title %></h2>

                <div class="meta">
                  <i class="icon-calendar"></i> <%= @post.created_at.strftime("%e-%m-%Y") %> 
                  <i class="icon-user"></i> <%= link_to @post.user.username, "#" %> 
                  <span class="pull-right"><i class="icon-comment"></i> <%= @post.comments_count %> Komentar</span>
                </div>

                <div class="bthumb">
                  <%= image_tag @post.picture.url(:large) %>
                </div>

                <%= raw(@post.description) %>
              </div>
              <!-- End of Post Entry -->
              <!-- Share -->
              <div class="well">
                <!-- Social media icons -->
                <div class="social pull-left">
                  <h5>Bagikan cerita ini: </h5>
                  <a href="#"><i class="icon-facebook facebook"></i></a>
                  <a href="#"><i class="icon-twitter twitter"></i></a>
                  <a href="#"><i class="icon-linkedin linkedin"></i></a>
                  <a href="#"><i class="icon-pinterest pinterest"></i></a>
                  <a href="#"><i class="icon-google-plus google-plus"></i></a>
                </div>
                <!-- Tags -->
                <div class="tags pull-right">
                  <h5>Label: </h5>
                  <a href="#">PNPM</a>
                  <a href="#">Anggaran</a>
                </div>
                <div class="clearfix"></div>
              </div>
              <!-- End of Share -->
              <!-- Comment Form -->
              <div class="respond well">
                <div class="title"><h4>Tulis Komentar</h4></div>
                <%= render_comments_form @post %>
              </div>
              <!-- End of Comment Form -->
              <!-- Comment -->
              <div class="comments well">
                <div class="title">
                  <h4><%= @post.comments_count %> Komentar</h4>
                </div>
                <%= render_comments @post %>
              </div>
              <!-- End of Comment -->
            </div>
          </div>
          <!-- End of Main Content -->
          <!-- Widgets -->
          <div class="span4">
            <div class="sidebar", style="margin-top: 0px;">
              <div class="widget">
                <h4><%= @post.get_subdistrict_name %></h4>
                <% if @implementer_unit %>
                  <h5 class="nav-list" style="text-align: center; border-bottom: 1px solid #eee;"><%= image_tag @implementer_unit.picture.url(:square) %></h5>
                  <% if @post.postable_type == "Activity" %>
                    <h5 style="margin-top: 10px;">Sub Proyek: <%= @post.postable.name %></h5>
                    <ul>
                      <li>Jumlah Penerima Manfaat (L): <b><%= @post.postable.male_beneficiary %></b></li>
                      <li>Jumlah Penerima Manfaat (P): <b><%= @post.postable.female_beneficiary %></b></li>
                      <li>Jumlah Penerima Manfaat (Miskin): <b><%= @post.postable.poor_beneficiary %></b></li>
                      <li>Jumlah Dana BLM:</li>
                      <li style="background-image: none;"><b><%= number_to_currency(@post.postable.blm_amount, :unit => "Rp ") %></b></li>
                      <li>Jumlah Dana Swadaya Masyarakat:</li>
                      <li style="background-image: none;"><b><%= number_to_currency(@post.postable.self_fund_amount, :unit => "Rp ") %></b></li>
                    </ul>  
                  <% end %>

                  <div style="margin-top: -15px; border-bottom: 1px solid #eee;">&nbsp;</div>
                
                  <h5 style="margin-top: 10px;">Informasi UPK</h5>
                  <ul>
                    <li>Alamat UPK: <b><%= @implementer_unit.address %></b></li>
                    <li>Telepon UPK: <b><%= @implementer_unit.phone %></b></li>
                    <li>Nama Fasilitator: <b><%= @implementer_unit.facilitator %></b></li>
                    <li>Telepon Fasilitator: <b><%= @implementer_unit.facilitator_phone %></b></li>
                    <li>Telepon Pengaduan: <b><%= @implementer_unit.call_center %></b></li>
                    <li>Jumlah Desa: </li>
                    <li>Jumlah Kelurahan: </li>
                    <li>Jumlah Penerima Manfaat: </li>
                  </ul>
                <% end %>
              </div>
            </div>
          </div>
          <!-- End of Widgets -->
        </div>
      </div>
    </div>
  </div>
  <!-- End of Content -->
</div>