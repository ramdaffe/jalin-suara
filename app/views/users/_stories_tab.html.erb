<div class="tabbable">
  <div class="tab-content">
    <div class="tab-pane active">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Judul Cerita</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% i=0 %>
          <% @entries.each do |post| %>
            <% i = i+1 %>
            <tr>
              <td><%= i %></td>
              <td><%= link_to post.title, post_path(post) %></td>
              <td><%= post.get_status %></td>
              <td>
                <%= link_to "Edit", edit_post_path(post), :class => 'btn btn-mini' %>
                <%= link_to "Hapus", post_path(post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= will_paginate @entries, :renderer => BootstrapPagination::Rails, :next_label => ">", :previous_label => '<' %>
    </div>
  </div>
</div>

<div class="pull-right">
  <button href="#responsive" data-toggle="modal" class="btn">+ Tambah Cerita</button>
</div>