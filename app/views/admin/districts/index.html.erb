<div class="span12">
  <!-- Content -->
  <div class="row">
    <!-- Main Content -->
    <div class="span12">
      <div class="support-page">
        <h2>Daftar Kabupaten</h2>
        <% if @province != nil %>
          <h4><%= @province.name %></h4>
        <% end %>
        <%= form_tag admin_districts_path, :method => 'get', :id => "table_search" do %>
          <%= hidden_field_tag :province_id, params[:province_id] if @province != nil %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Cari", :name => nil, :class => "btn btn-primary", :style => "margin-bottom: 10px;" %>
          <div id="districts"><%= render 'districts' %></div>
        <% end %>

        <br/>
        <% if current_user != nil %>
          <% if current_user.has_role? :admin %>
            <%= link_to "Tambah Kabupaten/Kotamadya", new_admin_district_path, :class => 'btn btn-primary' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- End of Main Content -->
  </div>
  <!-- End of Content -->
</div>