<div class="span12">
  <!-- Content -->
  <div class="row">
    <!-- Main Content -->
    <div class="span12">
      <div class="support-page">
        <h2>Daftar Kecamatan</h2>
        <% if @district != nil %>
          <h4><%= @district.name %> - <%= @district.get_province_name %></h4>
        <% end %>
        <%= form_tag admin_subdistricts_path, :method => 'get', :id => "table_search" do %>
          <%= hidden_field_tag :province_id, params[:province_id] if @province != nil %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Cari", :name => nil, :class => "btn btn-primary", :style => "margin-bottom: 10px;" %>
          <div id="subdistricts"><%= render 'subdistricts' %></div>
        <% end %>

        <br/>
        <% if current_user != nil %>
          <% if current_user.has_role? :admin %>
            <%= link_to "Tambah Kecamatan", new_admin_subdistrict_path, :class => 'btn btn-primary' %>
            <%= link_to "Update Location Data", admin_subdistricts_update_lat_long_data_path, {:class => 'btn btn-primary'} %>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- End of Main Content -->
  </div>
  <!-- End of Content -->
</div>