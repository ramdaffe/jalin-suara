<div class="span12">
  <!-- Content -->
  <div class="row">
    <!-- Main Content -->
    <div class="span12">
      <div class="support-page">
        <h2>Daftar Kecamatan</h2>
        <% if @district != nil %>
          <h4><%= @district.name %> - <%= @district.get_province_name %></h4>
        <% end %>
        <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Propinsi</th>
            <th>Nama Kecamatan</th>
            <th>Sub Proyek</th>
            <% if current_user != nil %>
              <% if current_user.has_role? :admin %>
                <th>Aksi</th>
              <% end %>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% i=0 %>
          <% @subdistricts.each do |subdistrict| %>
            <% i+= 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= subdistrict.get_province_name %></td>
              <td><%= link_to subdistrict.name, admin_subdistrict_path(subdistrict) %></td>
              <td style='text-align: right;'><%= subdistrict.get_activities_number %></td>
              <% if current_user != nil %>
                <% if current_user.has_role? :admin %>
                  <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_subdistrict_path(subdistrict), :class => 'btn btn-mini' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_subdistrict_path(subdistrict), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
                  </td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      
      <%= will_paginate @activities, :renderer => BootstrapPagination::Rails, :next_label => ">", :previous_label => '<' %>

      <% if current_user != nil %>
        <% if current_user.has_role? :admin %>
          <%= link_to "Tambah Kecamatan", new_admin_subdistrict_path, :class => 'btn btn-primary pull-right' %>
          <%= link_to "Update Location Data", admin_subdistricts_update_lat_long_data_path, {:class => 'btn btn-primary pull-right'} %>
        <% end %>
      <% end %>
    </div>
    <!-- End of Main Content -->
  </div>
  <!-- End of Content -->
</div>