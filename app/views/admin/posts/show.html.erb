<%- model_class = Post -%>
<div class="page-header">
  <h1>Daftar Cerita</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @post.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:budget) %>:</strong></dt>
  <dd><%= @post.budget %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dimension) %>:</strong></dt>
  <dd><%= @post.dimension %></dd>
  <dt><strong><%= model_class.human_attribute_name(:beneficiary) %>:</strong></dt>
  <dd><%= @post.beneficiary %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>