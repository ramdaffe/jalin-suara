<div class="span9">
  <div class="main-content">
    <div class="well">
      <%- model_class = Province -%>
      <h4>Daftar Propinsi</h4>
      <hr/>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nomor</th>
            <th>Nama Propinsi</th>
            <th>Jumlah Kabupaten</th>
            <th>Jumlah Kecamatan</th>
            <th>Jumlah Sub Proyek</th>
            <% if current_user != nil %>
              <% if current_user.has_role? :admin %>
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              <% end %>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% i=0 %>
          <% @provinces.each do |province| %>
            <% i+= 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= link_to province.name, admin_province_path(province) %></td>
              <td style='text-align: right;'><%= province.get_districts_number %></td>
              <td style='text-align: right;'><%= province.get_subdistricts_number %></td>
              <td style='text-align: right;'><%= province.get_activities_number %></td>
              <% if current_user != nil %>
                <% if current_user.has_role? :admin %>
                  <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")), 
                      edit_admin_province_path(province), :class => 'btn btn-mini' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_province_path(province),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
                  </td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if current_user != nil %>
        <% if current_user.has_role? :admin %>
          <%= link_to "Tambah Propinsi", new_admin_province_path, :class => 'btn btn-primary' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>