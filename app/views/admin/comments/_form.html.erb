<%= simple_form_for [:admin, @comment], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'mini'} } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), admin_comments_path, :class => 'btn' %>
  </div>
<% end %>
