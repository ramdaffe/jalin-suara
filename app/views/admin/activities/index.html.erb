<div class="span12">
  <!-- Content -->
  <div class="row">
    <!-- Main Content -->
    <div class="span12">
      <div class="support-page">
        <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Propinsi</th>
            <th>Nama Kecamatan</th>
            <th>Nama Sub Proyek</th>
            <% if current_user != nil %>
              <% if current_user.has_role? :admin %>
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              <% end %>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% i=0 %>
          <% @activities.each do |activity| %>
            <% i+= 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= activity.get_province_name %></td>
              <td><%= activity.get_subdistrict_name %></td>
              <td><%= link_to activity.name, admin_activity_path(activity) %></td>
              <% if current_user != nil %>
                <% if current_user.has_role? :admin %>
                  <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_activity_path(activity), :class => 'btn btn-mini' %>
                    <%= link_to "Hapus", admin_activity_path(activity), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
                  </td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      
      <%= will_paginate @activities, :renderer => BootstrapPagination::Rails, :next_label => ">", :previous_label => '<' %>

      <% if current_user != nil %>
        <% if current_user.has_role? :admin %>
          <%= link_to "Tambah Sub Proyek", new_admin_activity_path, :class => 'btn btn-primary pull-right' %>
          <%= link_to 'Upload Excel', {:action => 'import_excel'}, {:class => 'btn btn-primary pull-right'} %>
          <%= link_to 'Hapus Data', {:action => 'empty_pnpm_data'}, {:class => 'btn btn-primary pull-right'} %>
        <% end %>
      <% end %>
    </div>
    <!-- End of Main Content -->
  </div>
  <!-- End of Content -->
</div>