<div class="span12">
  <!-- Content -->
  <div class="row">
    <!-- Main Content -->
    <div class="span12">
      <div class="support-page">
        <h2>Daftar Sub Proyek</h2>
        <%= form_tag admin_activities_path, :method => 'get', :id => "table_search" do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Cari", :name => nil, :class => "btn btn-primary", :style => "margin-bottom: 10px;" %>
          <div id="activities"><%= render 'activities' %></div>
        <% end %>

        <br/>
        <% if current_user != nil %>
          <% if current_user.has_role? :admin %>
            <%= link_to "Tambah Sub Proyek", new_admin_activity_path, :class => 'btn btn-primary' %>
            <%= link_to 'Upload Excel', admin_activities_import_excel_path, {:class => 'btn btn-primary'} %>
            <%#= link_to 'Hapus Data', admin_activities_empty_pnpm_data_path, {:class => 'btn btn-primary pull-right'} %>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- End of Main Content -->
  </div>
  <!-- End of Content -->
</div>