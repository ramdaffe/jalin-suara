<div class="span3">
  <div class="well" style="padding: 8px 0;">
    <ul class="nav nav-list">
      <li class="nav-header">Cakupan Jalin Suara</li>
    </ul>
    <div style="font-size: 12px; margin-left: 15px;">Propinsi: <%= link_to @provinces_number, provinces_path, :style => 'display: inline;' %></div>
    <div style="font-size: 12px; margin-left: 15px;">Kabupaten: <%= link_to @districts_number, districts_path, :style => 'display: inline;' %></div>
    <div style="font-size: 12px; margin-left: 15px;">Kecamatan: <%= link_to @subdistricts_number, subdistricts_path, :style => 'display: inline;' %></div>
    <div style="font-size: 12px; margin-left: 15px;">Sub Proyek: <%= link_to(@activities_number, activities_path) %></div>
    <ul class="nav nav-list">
      <li class="divider"></li>
      <li class="nav-header">Cakupan PNPM Mandiri</li>
      <li style="font-size: 12px;">Propinsi: </li>
      <li style="font-size: 12px;">Kabupaten: </li>
      <li style="font-size: 12px;">Kecamatan: </li>
      <li style="font-size: 12px;">Desa: </li>
      <li style="font-size: 12px;">Total Bantuan Langsung Masyarakat:</li>
      <li style="font-size: 12px;"><b><%= number_to_currency(0, :unit => "Rp ") %></b></li>
    </ul>
  </div>
</div>

<!-- Main Content -->
<div class="span9">
  <div class="main-content">
    <div class="well">
      <h4>Daftar Propinsi</h4>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Propinsi</th>
            <th>Jumlah Kabupaten</th>
            <th>Jumlah Kecamatan</th>
            <th>Jumlah Sub Proyek</th>
          </tr>
        </thead>
        <tbody>
          <% i=0 %>
          <% @provinces.each do |province| %>
            <% i+= 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= link_to province.name, province_path(province) %></td>
              <td style='text-align: right;'><%= province.get_districts_number %></td>
              <td style='text-align: right;'><%= province.get_subdistricts_number %></td>
              <td style='text-align: right;'><%= province.get_activities_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= will_paginate @provinces, :renderer => BootstrapPagination::Rails %>
    </div>
  </div>
</div>
<!-- End of Main Content -->